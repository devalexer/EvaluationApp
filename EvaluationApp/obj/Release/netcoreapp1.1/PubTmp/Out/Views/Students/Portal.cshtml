@model EvaluationApp.Models.Students

@{
    ViewData["Title"] = "Portal";
}

<div class="grandParentContainer">
    <div class="parentContainer">

        <div class="studentportal">
            <h2>Welcome To Class!</h2>

            <p>Please enter your name:</p>

            <form asp-action="Index" asp-controller="DataOfUnderstandings">
                <div class="form-horizontal">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="textEntryBox">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input type="hidden" name="lectureId" value="@ViewData["lecturesId"]" /> @***************@
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Enter" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
