@model EvaluationApp.Models.Courses

@{
    ViewData["Title"] = "Edit";
}

<div class="grandParentContainer">
    <div class="stepParentContainer">

        <div class="modificationPage">

            <h2>Edit Course</h2>

            <form asp-action="Edit">
                <div class="form-horizontal">
                    <h4>Course</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseCode" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="CourseCode" class="form-control" />
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="LecturersId" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <select asp-for="LecturersId" class="form-control" asp-items="ViewBag.LecturersId"></select>
                            <span asp-validation-for="LecturersId" class="text-danger"></span>
                        </div>
                    </div>*@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>
