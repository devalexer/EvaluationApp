@model EvaluationApp.Models.Questions

@{
    ViewData["Title"] = "Evaluator";
}

<div class="evaluator">
    <h2>Evaluator</h2>
    <div class="votebutton">
        <div class="arrow-up" onclick=""></div>
        <h5>+ Understanding</h5>
    </div>

    <div class="votebutton">
        <h5>- Understanding</h5>
        <div class="arrow-down" onclick=""></div>
    </div>

    <div class="votebutton">
        <h5>Ask A Question:</h5> <br />
        <textarea name="text" cols="25" rows="3"></textarea> <br />
        <input type="submit" value="Submit">
    </div>


    <form asp-action="Edit">
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="QuestionText" class="form-control" />
                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}