@model EvaluationApp.Models.Lectures

@{
    ViewData["Title"] = "Details";
}

@Html.Hidden("LectureId", Model.Id)

<div id="mySidenav" class="sidenav">

    <div>
        <center><img src="/images/whitegraph.png" alt="Logo" style="height:50px;width:50px" id="portallogo"></center>
        <a href="/Home/Index">Home</a>
        <a asp-action="Index">Back</a>
        <a asp-action="Index">Log-Out</a>
    </div>

</div>

<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page) -->
<div id="main">


        <h1 id="portaltitle">Lecture: @Model.Subject</h1>
      
            <h6>The student access URL for this lecture will be:  @ViewData["currentURL"]/Students/Portal/@Model.Id</h6>

    
    <hr />
        <div id="datachart">@Html.Partial("_GraphPartial")</div>
        <div id="studentquestions">Future Student Questions</div>
            @*@{ Html.RenderPartial("_StudentQuestions"); }*@

    </div>

@section Scripts{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="/js/graph.js"></script>
}

