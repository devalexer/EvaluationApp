@model IEnumerable<EvaluationApp.Models.Lectures>

@{
    ViewData["Title"] = "Index";
}

@*<h2>Lectures Index</h2>*@

<div id="mySidenav" class="sidenav">
    <center><a href="/Home/Index"><img src="~/images/Evaluchart3 wht-02.svg" alt="Logo" style="height:100px;width:150px" id="portallogo"></a></center>
    <br />
    <a href="/Home/Index">Home</a>
    <a href="#">Back</a>

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" class="btn btn-link navbar-btn navbar-link" id="logOutButton">Log-out</button>
    </form>

</div>

<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page) -->
<div id="main">

    <h1 id="portaltitle">Lectures</h1>

    <p>
        @*<a href="/Lectures/Create/@ViewData["courseId"]">Create New</a>*@

        <button type="Button" class="createNewButton" onclick="location.href='/Lectures/Create/@ViewData["courseId"]'">
            Create New
        </button>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    Lecture Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="/Lectures/Details/@item.Id">
                            @Html.DisplayFor(modelItem => item.Subject)
                        </a>
                    </td>
                    <td>
                        @item.LectureDate.ToString("d")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>