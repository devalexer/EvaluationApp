@model IEnumerable<EvaluationApp.Models.Lectures>

@{
    ViewData["Title"] = "Index";
}

@*<h2>Lectures Index</h2>*@

<div id="mySidenav" class="sidenav">
    <center><img src="/images/whitegraph.png" alt="Logo" style="height:50px;width:50px" id="portallogo"></center>
    <a href="/Home/Index">Home</a>
    <a href="#">Back</a>
    <a href="#">Log Out</a>
</div>

<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page) -->
<div id="main">

    <h1 id="portaltitle">Lectures</h1>

    <p>
        @*<a href="/Lectures/Create/@ViewData["courseId"]">Create New</a>*@

        <button type="Button" class="createNewButton" onclick="location.href='/Lectures/Create/@ViewData["courseId"]'">
            Create New
        </button>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    Lecture Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="/Lectures/Details/@item.Id">
                            @Html.DisplayFor(modelItem => item.Subject)
                        </a>
                    </td>
                    <td>
                        @item.LectureDate.ToString("d")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>